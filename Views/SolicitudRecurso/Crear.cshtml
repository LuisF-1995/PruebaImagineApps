@model SolicitudRecurso

@{
    ViewData["Title"] = "Crear solicitud recurso";
}

<h2>Crear Solicitud de Recursos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Crear" method="post">
    <div class="form-group mb-1">
        <label asp-for="NombreSolicitante"></label>
        <input asp-for="NombreSolicitante" class="form-control" />
        <span asp-validation-for="NombreSolicitante" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Departamento"></label>
        <input asp-for="Departamento" class="form-control" />
        <span asp-validation-for="Departamento" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="TipoRecurso"></label>
        <select asp-for="TipoRecurso" class="form-control">
            <option value="">Seleccione un tipo de recurso</option>
            <option value="Equipo">Equipo</option>
            <option value="Acceso a Sistema">Acceso a Sistema</option>
            <option value="Otros">Otros</option>
        </select>
        <span asp-validation-for="TipoRecurso" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="FechaRequerimiento"></label>
        <input asp-for="FechaRequerimiento" type="date" class="form-control" />
        <span asp-validation-for="FechaRequerimiento" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Enviar Solicitud</button>
</form>